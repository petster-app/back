<%- include('../layout/head') %>
<body>

  <%- include('../layout/nav') %>

  <h1>petster</h1>


  <h2>Fill out the info for your perfect pet below</h2>
    <main>
      <form id="user-form" action="/search" method="GET">
      <select class="dropdown" name="type" id="pet-type-dropdown">
        <!-- change back to default - using dog for testing -->
        <option class="dropbtn" name="Dog" value="Dog">Type of pet</option>
        <option name="Dog" value="Dog">Dog</option>
        <option name="Cat" value="Cat">Cat</option>
        <option name="Rabbit" value="Rabbit">Rabbit</option>
      </select>

      <input class="form-input" type="number" name="city" placeholder="Enter Your Zip Code" value="98103">
      
      <select class="dropdown" name="travelDistance" id="travel-distance-dropdown">
        <option name="15-miles" value="15" class="dropbtn" >Distance from my location</option>
        <option name="5-miles" value="5">5 Miles</option>
        <option name="15-miles" value="15">15 Miles</option>
        <option name="25+-miles" value="25">25 miles</option>
      </select>

      
      <div id="checkbox-container" class="form-input">
          <p id="checkbox-header">Good with </p>
        <div>
          <input class="checkbox" type="checkbox" 
          name="goodWithChildren" value="true">
          <label for="contactChoice1">children</label>
        </div>

        <div>
          <input class="checkbox" type="checkbox"
          name="goodWithDogs" value="true">
          <label for="contactChoice2">dogs</label>
        </div>

        <div>
          <input class="checkbox" type="checkbox"
          name="goodWithCats" value="true">
          <label for="contactChoice3">cats</label>
        </div>
      </div>

        <input class="form-input" type="text" name="userName" placeholder="Enter Your Username Here">

      <button id="submit" onclick="window.location.href='/search'">Submit</button>
    </form>
    </main>
    <%- include('../layout/footer') %>
  </body>
</html>

